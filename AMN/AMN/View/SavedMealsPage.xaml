<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMN.View.SavedMealsPage">
    <ContentPage.Content>
        <!--<ScrollView>-->
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Saved Meals" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <ActivityIndicator x:Name="actInd"></ActivityIndicator>
            <!-- Saved meals -->
            <ListView x:Name="lvSavedMeals" ItemsSource="{Binding savedMeals}" ItemTapped="Meal_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Margin="50,0" x:Name="stackMeal">
                                <Label Text="{Binding mealName}" FontSize="24" VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Saved meals end -->
            <Button Text="New Meal" Clicked="NewMeal_Clicked" Margin="50,10"/>
        </StackLayout>
        <!--</ScrollView>-->
    </ContentPage.Content>
</ContentPage>