<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMN.View.NutritionPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Nutrition" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
                <StackLayout Margin="50,10" VerticalOptions="StartAndExpand">
                    <Label x:Name="lblTest" Text="Test label." TextColor="Black" FontSize="Medium"></Label>
                </StackLayout>
                <Entry x:Name="entryQuery" FontSize="Large" TextColor="Black"
                           Placeholder="Search for food item..."></Entry>
                <Button Text="API Test" Margin="50,10,50,10" Clicked="Button_Clicked" BackgroundColor="#2196F3" TextColor="White" FontSize="Medium"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>