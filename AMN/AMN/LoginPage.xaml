<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMN.LoginPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                    <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                </Frame>
                <StackLayout Margin="50,10" VerticalOptions="CenterAndExpand">
                    <Label FontSize="Large" TextColor="Black">E-mail Address:</Label>
                    <Entry FontSize="Large" TextColor="Black"></Entry>
                    <Label FontSize="Large" TextColor="Black">Password:</Label>
                    <Entry IsPassword="True" FontSize="Large" TextColor="Black"></Entry>
                    <Button Text="Login" Margin="0,20,0,0" BackgroundColor="#2196F3" TextColor="White" FontSize="Medium"></Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>